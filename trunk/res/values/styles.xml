<resources>

    <style name="row_log_baseText" parent="@android:style/TextAppearance" />

    <style name="row_log_gkCode" parent="@style/row_log_baseText">
        <item name="android:textSize">22.0sp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="row_log_gkName" parent="@style/row_log_baseText">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">#ff888888</item>
    </style>

    <style name="row_log_cacheCode" parent="@style/row_log_baseText">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="row_log_cacheName" parent="@style/row_log_baseText">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#ff888888</item>
    </style>

    <style name="row_log_comment" parent="@style/row_log_baseText">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@*android:color/primary_text_light</item>
    </style>

    <style name="row_log_statusLabel" parent="@style/row_log_baseText">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="row_log_statusContent" parent="@style/row_log_baseText">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffcc8800</item>
    </style>

    <style name="row_log_profileLabel" parent="@style/row_log_baseText">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="row_log_profileContent" parent="@style/row_log_baseText">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#ff31b6e7</item>
    </style>

    <style name="row_log_errorMessage" parent="@style/row_log_baseText">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffcc0000</item>
    </style>
    
    <style name="log_activity_spinner" parent="@android:style/Widget.Spinner" />

</resources>